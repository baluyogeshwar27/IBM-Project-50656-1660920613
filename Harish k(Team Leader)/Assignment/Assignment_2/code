import random
i=1

while(i&lt;=7):
a=random.randint(20,200)

b=random.randint(20,100)
print(f&#39;Day {i}&#39;)
print(f&#39;Temperature:{a} )
print(f&#39;Humidity :{b} )
if a&gt;80:
if b&gt;80:
print(&quot;HAZARD PREDICTED... &quot;)
else:
print(&quot;HIGH TEMPERATURE &quot;)
elif a==80:
print(&quot;TEMPERATURE HIGH &quot;)
else:
print(&quot;ALL GOOD &quot;)
i=i+1
print(end=&quot;\n&quot;)
